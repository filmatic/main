<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QueueServlet</servlet-name>
        <servlet-class>servlets.GenerateQueueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToQueueServlet</servlet-name>
        <servlet-class>servlets.AddToQueueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateAllMovieServlet</servlet-name>
        <servlet-class>servlets.GenerateAllMovieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QueueServlet</servlet-name>
        <url-pattern>/QueueServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToQueueServlet</servlet-name>
        <url-pattern>/AddToQueueServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateAllMovieServlet</servlet-name>
        <url-pattern>/GenerateAllMovieServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
